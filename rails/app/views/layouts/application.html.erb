<!DOCTYPE html>
<html>
<head>
  <title>Sweep</title>

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "jquery", "application" %>
  <%= csrf_meta_tags %>

  <script language="javascript" type="text/javascript" src="/assets/flot/jquery.flot.min.js"></script>
  <script language="javascript" type="text/javascript" src="/assets/flot/jquery.flot.min.js"></script>
  <script language="javascript" type="text/javascript" src="/assets/flot/jquery.flot.time.js"></script>
</head>
<body>

<div id="user_nav">
	<% if current_user %>
		<%= current_user.email %>
		<% if current_user.administrator == true %>
			<%= link_to "Admin", controller: "admin", action: "index" %>
		<% end %>
		<%= link_to "Log out", log_out_path%>
	<% else %>
		<%= link_to "Sign up", sign_up_path %>
		<%= link_to "Log in", log_in_path %>
	<% end %>
</div>

<% flash.each do |name, msg| %>
	<%= content_tag :div, msg, :id => "flash_#{name}"%>
<% end %>

<%= yield %>

</body>
</html>
