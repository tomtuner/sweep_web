<h1>Administration</h1>
<% if @departments.count > 1 %>
	<h2>Current Departments</h2>
	<table border="1">
	<tr>
	<th>Department Name</th>
	<th>Department Key</th>
	<th>Date Created</th>
	</tr>
	<% @departments.each do |d| %>
		<tr>
		<td><%= d.name %></td>		
		<td><%= d.valid_key %></td>
		<td><%= l d.created_at, :format => :short %></td>
		</tr>
    <% end %>
	</table>
<% end %>
<%= link_to "Add Department", controller: "departments", action: "new" %>

<% if @advisors.count > 1 %>
	<h2>Current Advisors</h2>
	<table border="1">
	<tr>
	<th>Advisor Email</th>
	<th>Department Name</th>
	<th>Date Created</th>
	</tr>
	<% @advisors.each do |a| %>
	<% department = Department.find(a.department_id) %>
	<% user = User.find(a.user_id) %>
		<tr>
		<td><%= user.email %></td>		
		<td><%= department.name %></td>
		<td><%= l a.created_at, :format => :short %></td>
		</tr>
    <% end %>
	</table>
<% end %>
<%= link_to "Assign Advisor", controller: "advisors", action: "new" %>