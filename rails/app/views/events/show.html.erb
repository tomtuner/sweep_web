<div class="page-fold">
	<div class="row">
		<div class="centered">
			<section>
  			  <h1 id="event-name"><%= @event.name %></h1>
			  <h1 id="event-id"><%= @event.id %></h1>
			  <h3><%= @department.name %></h3>
			<div>
				<% if current_user %>		
				  Download:
				  <%= link_to "Excel", :anchor => "wall", format: "xls" %>
				  <%= link_to "CSV", :anchor => "wall", format: "csv" %>
				<% end %>

			</div>
			</section>
			<section class="sw-table">
			<table border="1">
			<tr>
			<th>Scan Value</th>
			<th>Date Scanned</th>
			<% if @scans_registered %>
			<th>Pre-registered</th>
			<% end %>
			</tr>
			<% @scans.each do |s| %>
				<tr>
				<% if current_department %>
						<% number_obscured =  (s.value.length * 0.75).ceil %>
						<% obscured_value =  s.value[number_obscured, s.value.length] 
						new_value = ""
						for i in 1..number_obscured
							new_value << "*"
						end
						new_value << obscured_value
						%>
				<td><%= new_value %></td>
				<% else %>
				<td><%= s.value %></td>
				<% end %>
				<% if s.scanned_at %>
					<td><%= l s.scanned_at, :format => :long %></td>
				<% else %>
					<td>N/A</td>
				<% end %>
				<% if @scans_registered %>
					<% if s.registered_at %>
						<td>YES</td>
					<% else %>
						<td>NO</td>
					<% end %>
				<% end %>
				</tr>
			<% end %>
			</table>
			</section>
		</div>
	</div>
</div>