<div class="page-fold">
	<div class="small-row">
		<div class="centered">
			<section>
			<h1>Log In</h1>
			<%= form_tag sessions_path do %>
				<h3 id="email-login">Have a Sweep account?</h3>
				<p>
					<%= label_tag :email %><br />
					<%= email_field_tag :email, params[:email] %>
				</p>
				<p>
					<%= label_tag :password %><br />
					<%= password_field_tag :password %>
				</p>
				<p><%= link_to "Forgot your password?", new_password_reset_path %>
				<p>
					<%= label_tag :remember_me %>
					<%= check_box_tag :remember_me, 1, params[:remember_me] %>
				</p>
				<h3 id="key-login">Part of a club or organization?</h3>
				<p>
					<%= label_tag :valid_key %><br />
					<%= text_field_tag :valid_key, params[:valid_key] %>
				</p>
				<p class="button"><%= submit_tag "Log In" %></p>
			<% end %>
			</section>
		</div>
	</div>
</div>